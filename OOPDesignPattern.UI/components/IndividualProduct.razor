@inject IShoppingCart shoppingCart

<div class="card" style="width: 18rem; margin: 20px">
    <img src=@Product.Image class="card-img-top" alt="..." style="height: 18rem">
    <div class="card-body">
        <h5 class="card-title">@Product.Title</h5>
        <button @onclick="(() => AddToCart.InvokeAsync(Product))" class="btn btn-primary">Add To Cart</button>
        <p class="card-body">Quantity: <strong>@Product.Quantity</strong></p>
    </div>
</div>

@code {
    [Parameter] public IProduct Product { get; set; }
    [Parameter] public EventCallback<IProduct> AddToCart { get; set; }

